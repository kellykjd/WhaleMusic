<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FragmentResultados"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:paddingHorizontal="5dp">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/fragmentResultados_EditText_searchView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="#555"
        android:gravity="center"
        app:iconifiedByDefault="false"
        app:queryHint="Artistas, canciones o podcasts..."
        android:layout_marginTop="10dp"
        android:imeOptions="actionSearch"
        android:clickable="true"/>
    <TextView
        android:id="@+id/fragmentResultados_TextView_artistas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentResultados_recyclerViewArtistas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/fragmentResultados_TextView_canciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentResultados_recyclerViewCanciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/fragmentResultados_TextView_albumes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginVertical="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentResultados_recyclerViewAlbumes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"/>
</LinearLayout>