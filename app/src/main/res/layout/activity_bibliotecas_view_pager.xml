<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ActivityBibliotecasViewPager"
    android:orientation="vertical"
    android:background="#1B1B1B">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/BibliotecaTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabRippleColor="#494"
        app:tabIndicatorColor="#000"
        app:tabSelectedTextColor="#F8943F"
        app:tabTextColor="#555"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activityBibliotecas_viewPagerBibliotecas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

    </androidx.viewpager.widget.ViewPager>

    </LinearLayout>
</LinearLayout>